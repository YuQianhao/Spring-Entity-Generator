<Window x:Class="SpringEntityGenerator.Windows.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpringEntityGenerator.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Spring Entity Generator" WindowStartupLocation="CenterScreen" Height="600" Width="450" Icon="/Windows/logo.png">
    <StackPanel>
        <Image Width="200" Source="/Windows/logo.png" Margin="0,30,0,0"/>
        <Label Content="Spring Entity Generator" HorizontalAlignment="Center" Margin="0,50,0,0" FontWeight="Bold" FontSize="23"></Label>
        <Label Content="Spring Boot和MyBatis Plus的代码快速生成器" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,80,0,0">
            <Button Content="新建项目" Width="200" Height="40" Name="ButtonCreateNewProject" Click="ButtonCreateNewProject_Click"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="打开项目" Width="200" Height="40" Name="ButtonOpenProject" Click="ButtonOpenProject_Click"></Button>
        </StackPanel>
    </StackPanel>
</Window>
